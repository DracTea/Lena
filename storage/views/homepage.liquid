<div id="app" class="view-login">
  <div class="grid min-h-svh lg:grid-cols-2">
    <div class="flex flex-col gap-4 p-6 md:p-10">
      <div class="flex justify-center gap-2 md:justify-start">
        <a href="#" class="flex items-center gap-3 font-medium">
          <div class="flex items-center justify-center rounded-md bg-primary text-primary-foreground">
            <img width="36px" height="auto" alt="logo" src="/public/logo.svg">
          </div>
          <span class="text-xl">Aviato | {{ page.title }}</span>
        </a>
      </div>
      <div class="flex flex-1 items-center justify-center">
        <div class="w-full max-w-xs">
          <div class="flex flex-col gap-2 pb-4">
            <h1 class="text-2xl font-bold">Login to your account</h1>
            <p class="text-balance text-sm text-muted-foreground">Enter your email below to login to your account</p>
          </div>
          <form>
            <fieldset class="flex flex-col gap-2">
              <TextField label="Email" name="email" />
              <TextField label="Password" name="password" />
            </fieldset>
            <div class="mt-4 flex flex-col gap-2 btn-group">
              <button
                type="submit"
                class="w-full rounded-md bg-primary px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-primary/80 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary disabled:cursor-not-allowed disabled:opacity-50"
              >
                Login
              </button>
            </div>
          </form>
          <div class="text-center text-sm pt-4">
            <p>Don't have an account? Sign up <a class="underline underline-offset-4" href="#">Sign up</a></p>
          </div>
        </div>
      </div>
    </div>
    <div class="img-block">
      <img
        width="100%"
        height="100%"
        src="/public/bg.jpg"
        alt="Image"
        class="absolute inset-0 h-full w-full object-cover dark:brightness-[0.9] dark:grayscale"
      >
    </div>
  </div>
</div>
